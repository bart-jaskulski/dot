[colors]
background-alt = #444
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
transparent = #00000000
black	    = ${xrdb:color0}
red	    = ${xrdb:color1}
green 	    = ${xrdb:color2}
yellow	    = ${xrdb:color3}
blue	    = ${xrdb:color4}
magenta	    = ${xrdb:color5}
cyan	    = ${xrdb:color6}
white	    = ${xrdb:color7}
;Color alias
background  = ${xrdb:background}
foreground  = ${colors.white}

[bar/base]
monitor = ${env:MONITOR:eDP-1}
enable-ipc = true

height = 28

bottom = true

font-0 = "iAWriterMonoS:style=Regular:size=8;1"
font-1 = "Font Awesome 5 Brands:pixelsize=11;2"
font-2 = "Font Awesome 5 Free Solid:pixelsize=11;2"
font-3 = "Font Awesome 5 Free Regular:pixelsize=11;2"
font-4 = "iMWritingMonoS Nerd Font:style=Regular:size=11;1"

background = ${colors.background}
foreground = ${colors.foreground}

padding = 4

module-margin = 2

[bar/new]
inherit = bar/base
modules-left = i3
modules-right = pulseaudio battery date
line-size = 2

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
enable-scroll = false
wrapping-scroll = false

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-underline= ${colors.yellow}
label-focused-foreground = ${colors.yellow}
label-focused-padding = 1.7

; unfocused = Inactive workspace on any monitor
label-unfocused-font = 4
label-unfocused = %index%
label-unfocused-padding = 1.7

; visible = Active workspace on unfocused monitor
label-visible-font = 4
label-visible = %index%
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-underline = ${colors.red}
label-urgent-padding = 1.7

[module/date]
type = custom/script
interval = 30
exec = date +"%d.%m (%a), %H:%M"
click-left = ~/Scripts/popcal

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted =  0%
label-muted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging =  <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

label-full =  %percentage%%
format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

[settings]
screenchange-reload = true

[global/wm]
margin-bottom = 0
margin-top = 0
