[core]
	editor = vim
	excludesFile = ~/.gitignore
	autocrlf = input
[commit]
	gpgsign = true
	template = ~/.gitmessage
	verbose = true
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[help]
	autocorrect = 1
[init]
	defaultBranch = main
[includeIf "gitdir:~/Repos/WPDesk/"]
	path = ~/Repos/WPDesk/.gitconfig
[push]
  autoSetupRemote = true
[pull]
	rebase = true
[alias]
  a = add
  all = add --all
  df = diff
  dfc = diff --cached
  c = commit
  cn = commit --no-verify
  l = log --oneline
  l1 = log -1 --oneline
  ll = log --oneline --all
  s = status
  ss = status --short --branch
  p = push
  pl = pull
  st = stash push
