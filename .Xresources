! special
*.foreground:   #303030
*.background:   #f5f5f5
*.cursorColor:  #303030

! black
*.color0:       #151515
*.color8:       #505050

! red
*.color1:       #ac4142
*.color9:       #ac4142

! green
*.color2:       #90a959
*.color10:      #90a959

! yellow
*.color3:       #f4bf75
*.color11:      #f4bf75

! blue
*.color4:       #6a9fb5
*.color12:      #6a9fb5

! magenta
*.color5:       #aa759f
*.color13:      #aa759f

! cyan
*.color6:       #75b5aa
*.color14:      #75b5aa

! white
*.color7:       #d0d0d0
*.color15:      #f5f5f5

! font
*font: xft:iMWritingMonoS Nerd Font Mono:size=21,antialias=true
*boldFont: xft:iMWritingMonoS Nerd Font Mono:bold:size=21,antialias=true

Xcursor.theme: Qogir
Xcursor.size:  32

*fading:                10
*fadeColor:             #000000
*pointerColorBackground:#2B2C2B
*pointerColorForeground:#16A085
! *font:			iMWritingMonoS Nerd Font Mono:size=12
! True transparency 
! URxvt.fading: 1
! URxvt.fadeColor: #222222
! URxvt.internalBorder: 12 

URxvt.geometry: 100x32
URxvt.depth: 32
! URxvt.background:	[100]#1e1e20
URxvt.letterSpace: 0
URxvt*scrollBar:                      false
URxvt.scrollBar_right: false
URxvt*mouseWheelScrollPage:           false
URxvt*cursorBlink:                    true
URxvt*saveLines:                      5000
URxvt.lineSpace: 0
URxvt.internalBorder: 24
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.urgentOnBell: true
URxvt.iso14755: false

!! Common Keybinds for Navigations
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

!! Copy Paste & Other Extensions
! URxvt.perl-ext-common: default,clipboard,url-select
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
! URxvt.keysym.M-c: perl:clipboard:copy
! URxvt.keysym.M-v: perl:clipboard:paste
! URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! URxvt.keysym.M-Escape: perl:keyboard-select:activate
! URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1
